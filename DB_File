CREATE TABLE `Target_Impressions`
(
`Target_Impressions_Id` bigint NOT NULL,
`Target_Impressions` bigint NOT NULL,
PRIMARY KEY (`Target_Impressions_Id`)
)

CREATE TABLE Target_Clicks
(
Target_Clicks_Id bigint NOT NULL,
Target_Clicks bigint NOT NULL,
PRIMARY KEY (Target_Clicks_Id)
);

CREATE TABLE Payment
(
Payment_Id bigint NOT NULL,
Payment_Status varchar(255) NOT NULL,
PRIMARY KEY (Payment_Id)
);

CREATE TABLE Location
(
Location_Id bigint NOT NULL,
Location_Name varchar(255) NOT NULL,
PRIMARY KEY (Location_Id)
);

CREATE TABLE Campaign
(
Campaign_Id bigint NOT NULL,
Name varchar(255) NOT NULL,
Start_Date datetime NOT NULL,
End_Date datetime NOT NULL,
Target_Impressions_Id bigint NOT NULL,
Target_Clicks_Id bigint NOT NULL,
Price decimal NOT NULL,
Payment_Id bigint NOT NULL,
Image_URL text NOT NULL,
Campaign_URL text NOT NULL,
Created_Date datetime NOT NULL,
Modified_Date datetime NOT NULL,
State text NOT NULL,

PRIMARY KEY (Campaign_Id),
FOREIGN KEY (Target_Impressions_Id) REFERENCES Target_Impressions(Target_Impressions_Id),
FOREIGN KEY (Target_Clicks_Id) REFERENCES Target_Clicks(Target_Clicks_Id),
FOREIGN KEY (Payment_Id) REFERENCES Payment(Payment_Id)
);

CREATE TABLE Location_Campaign
(
Id bigint NOT NULL,
Location_Id bigint NOT NULL,
Campaign_Id bigint NOT NULL,

PRIMARY KEY (Id),
FOREIGN KEY (Campaign_Id) REFERENCES Campaign(Campaign_Id),
FOREIGN KEY (Location_Id) REFERENCES Location(Location_Id)

);